# Discord Bot Configuration
# Create a Discord application at https://discord.com/developers/applications

# Discord Bot Token (from Bot tab in Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Server (Guild) ID
DISCORD_GUILD_ID=your_discord_server_id_here

# Channel ID where website posts should be synced (optional - if not set, creates threads in channel based on tribe)
WEBSITE_CHANNEL_ID=your_channel_id_here

# Secret token for internal API communication between server and bot
BOT_TOKEN_SECRET=generate_a_secure_random_string_here

# Discord OAuth2 (from OAuth2 tab in Discord Developer Portal)
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://belonging.lgbt/api/auth/discord/callback
