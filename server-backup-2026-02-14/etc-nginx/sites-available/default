server {
    server_name evepanzarino.com www.evepanzarino.com;
    client_max_body_size 30G;

    location / {
        root /var/www/evepanzarino;
        try_files $uri $uri/ =404;
    }

    location /pixelgrid {
        proxy_pass http://127.0.0.1:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /blog {
        proxy_pass http://127.0.0.1:8080/blog;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600;
        proxy_connect_timeout 3600;
        proxy_send_timeout 3600;
    }

    location /dev-blog {
        proxy_pass http://127.0.0.1:8080/dev-blog;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600;
        proxy_connect_timeout 3600;
        proxy_send_timeout 3600;
    }

    location /belonging/api {
        proxy_pass http://127.0.0.1:5003/api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /belonging {
        proxy_pass http://127.0.0.1:5004;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Timeline: SSR entry pages (date/slug pattern)
    location ~ "^/timeline/\d{4}-\d{2}-\d{2}/" {
        rewrite ^/timeline/(.*)$ /entry/$1 break;
        proxy_pass http://localhost:5007;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Timeline: sitemap and robots
    location = /timeline/sitemap.xml {
        rewrite ^/timeline/sitemap.xml$ /sitemap.xml break;
        proxy_pass http://localhost:5007;
        proxy_set_header Host $host;
    }

    location = /timeline/robots.txt {
        rewrite ^/timeline/robots.txt$ /robots.txt break;
        proxy_pass http://localhost:5007;
        proxy_set_header Host $host;
    }

    # Timeline: images and thumbnails
    location /timeline/images/ {
        proxy_pass http://localhost:5007/images/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    location /timeline/thumbnails/ {
        proxy_pass http://localhost:5007/thumbnails/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # Timeline: API
    location /timeline/api/ {
        proxy_pass http://localhost:5007/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        client_max_body_size 50M;
    }

    # Timeline: redirect /timeline to /timeline/
    location = /timeline {
        return 301 /timeline/;
    }

    # Timeline: React client
    location /timeline/ {
        proxy_pass http://localhost:5008/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen [::]:443 ssl;
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/evepanzarino.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/evepanzarino.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = www.evepanzarino.com) {
        return 301 https://$host$request_uri;
    }
    if ($host = evepanzarino.com) {
        return 301 https://$host$request_uri;
    }
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name evepanzarino.com www.evepanzarino.com;
    return 404;
}
